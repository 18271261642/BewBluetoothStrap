<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/b18i_titil_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/b18i_selected_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/size_5"
                    android:text="@string/modify_password"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_17" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/size_25"
                android:background="@color/chang_white" />

            <LinearLayout
                android:id="@+id/reset_device"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/b18i_selected_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/size_5"
                    android:text="@string/reset_device"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_17" />

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/size_25"
                android:background="@color/chang_white" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/line_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/b18i_selected_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/size_5"
                    android:text="@string/help"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_17" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/size_25"
                android:background="@color/chang_white" />

            <LinearLayout
                android:id="@+id/line_above"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/b18i_selected_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/size_5"
                    android:text="@string/abour"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_17" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/size_25"
                android:background="@color/chang_white" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_60"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:background="#4dddff"
            android:text="@string/exit_login" />
    </RelativeLayout>

</LinearLayout>