<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#4dddff"
    android:layout_height="match_parent">

    <include layout="@layout/appbar_toolbar"/>


    <ProgressBar
        android:id="@+id/getwahtchTimeProgressBar"
        android:layout_width="match_parent"
        android:visibility="gone"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_marginTop="2dp"
        android:layout_height="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/systemtime"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/showSysTimeTv"
        android:layout_width="match_parent"
        android:text=""
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_width="match_parent"
        android:text="@string/watchtime"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/showAnalysisTimeTv"
        android:layout_width="match_parent"
        android:text=""
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/getWatchTimeTv"
        android:layout_width="wrap_content"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:text="@string/findwatch"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:background="@drawable/btn_shap_layout"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/white"
        android:text="手表已连接手表会震动提示,小表针指到TEL位置"
        android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>