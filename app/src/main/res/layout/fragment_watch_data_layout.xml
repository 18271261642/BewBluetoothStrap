<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/chang_white"
    android:layout_height="match_parent">

    <include layout="@layout/appbar_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.example.bozhilun.android.siswatch.view.RiseNumberTextView
                    android:id="@+id/watch_h8_dataStepTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="0"
                    android:textColor="@color/new_colorAccent"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/steps"
                    android:textColor="@color/new_colorAccent"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:text="@string/mileage"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/watch_h8_dataDisTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:text="0.0"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:text="@string/calories"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/watch_h8_dataKcalTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:text="0"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/icon_h9_newdatarun" />

            <TextView
                android:id="@+id/watch_h8_syncdataTv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@mipmap/icon_refresh_img"
                android:gravity="center"
                android:padding="5dp"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="63dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/week_tv1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="@string/data_report_week"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#828282"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/month_tv2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="@string/data_report_month"
                android:textColor="#828282"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/year_tv3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/year"
                android:textColor="#828282"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="2dp">

            <View
                android:id="@+id/week_view1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:background="@color/black_c"/>

            <View
                android:id="@+id/month_view2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@color/black_c"/>

            <View
                android:id="@+id/year_view3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@color/black_c"/>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:text="10æœˆ"
            android:textSize="17sp"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">


            <lecho.lib.hellocharts.view.LineChartView
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/watch_newdataweekChar"
                android:layout_height="210dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/black_c"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/xTv1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xTv2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xTv3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xTv4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xTv5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xTv6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xTv7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

</LinearLayout>