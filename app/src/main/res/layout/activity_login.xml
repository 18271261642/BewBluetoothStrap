<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#4CDEFE"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@mipmap/login_logo" />

        <com.example.bozhilun.android.siswatch.view.LoginWaveView
            android:id="@+id/login_waveView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/login_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/username_input_logon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/username"
                    style="@style/MyEditText"
                    android:drawableLeft="@mipmap/yonghuming_dianji"
                    android:drawablePadding="@dimen/size_10"
                    android:hint="@string/input_name"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password_logon"
                    style="@style/MyEditText"
                    android:drawableLeft="@mipmap/suo_dianji"
                    android:drawablePadding="@dimen/size_10"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/login_visitorTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5"
                    android:layout_gravity="left"
                    android:text="@string/visitor_enter" />

                <TextView
                    android:id="@+id/forget_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:text="@string/forget_password" />
            </RelativeLayout>



            <Button
                android:id="@+id/login_btn"
                style="@style/match_btn"
                android:layout_height="45dp"
                android:layout_below="@+id/email_login_form"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/blue_btn_selector"
                android:text="@string/user_login" />

            <Button
                android:id="@+id/register_btn"
                style="@style/match_btn"
                android:layout_height="45dp"
                android:layout_below="@+id/email_login_form"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/white_btn_selector"
                android:text="@string/user_regsiter"
                android:textColor="@color/new_colorAccent" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:baselineAligned="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="-10dp"
                    android:layout_marginLeft="0dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/new_colorAccent"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:text="@string/third_party_login"
                    android:singleLine="true"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/black_9"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="-10dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:background="@color/new_colorAccent"
                    android:layout_weight="1"
                    />

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/ll_bottom_tabaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:baselineAligned="true">
                    <RelativeLayout
                        android:id="@+id/xinlang_iv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0" >
                        <ImageView
                            android:gravity="center_horizontal"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/xinlang"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@null"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/qq_iv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0" >
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/qq"
                            android:contentDescription="@null"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/weixin_iv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0" >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/weixinyuan"
                            android:contentDescription="@null"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                </LinearLayout>

                //国外

                <LinearLayout
                    android:id="@+id/ll_bottom_tabguowai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:baselineAligned="true">
                    <RelativeLayout
                        android:id="@+id/fecebook_longin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0" >
                        <ImageView
                            android:gravity="center_horizontal"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/facebookyuan"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@null"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/google_longin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0" >
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/googleyuan"
                            android:contentDescription="@null"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/twitter_longin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0" >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/twitteryuan"
                            android:contentDescription="@null"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                </LinearLayout>

            </FrameLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>