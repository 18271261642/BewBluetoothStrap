<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/appbar_toolbar" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linear_border" />
                <RelativeLayout
                    android:id="@+id/personal_avatar_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_70"
                    android:background="@drawable/square_white_btn_change">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="@string/personal_avatar"
                        android:textSize="15sp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/mine_logo_iv_personal"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_toLeftOf="@+id/touxiang"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="@dimen/size_10"
                        android:layout_marginBottom="2dp"
                        android:src="@mipmap/touxiang"
                        app:civ_border_color="@color/gold"
                        app:civ_border_width="0.7dp" />
                    <ImageView
                        android:id="@+id/touxiang"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/lanage"
                        android:layout_marginRight="@dimen/size_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/size_15"
                    android:background="@color/linear_border" />

                <RelativeLayout
                    android:id="@+id/nickname_relayout_personal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:background="@drawable/square_white_btn_change">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_15"
                        android:text="@string/nick_name"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/nickname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/touxiang2"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_10"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/touxiang2"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/lanage"
                        android:layout_marginRight="@dimen/size_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/size_15"
                    android:background="@color/linear_border" />

                <RelativeLayout
                    android:id="@+id/sex_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:background="@drawable/square_white_btn_change">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_15"
                        android:text="@string/sex"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sex_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/touxiang3"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/touxiang3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:src="@mipmap/lanage" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/size_15"
                    android:background="@color/linear_border" />

                <RelativeLayout
                    android:id="@+id/height_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:background="@drawable/square_white_btn_change">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_15"
                        android:text="@string/height"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/height_tv"
                        android:layout_toLeftOf="@+id/touxiang4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/touxiang4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:src="@mipmap/lanage" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/size_15"
                    android:background="@color/linear_border" />

                <RelativeLayout
                    android:id="@+id/weight_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:background="@drawable/square_white_btn_change">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_15"
                        android:text="@string/weight"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/weight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/touxiang5"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/touxiang5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:src="@mipmap/lanage" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/size_15"
                    android:background="@color/linear_border" />


                <RelativeLayout
                    android:id="@+id/birthday_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45"
                    android:background="@drawable/square_white_btn_change">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_15"
                        android:text="@string/birthday"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/birthday_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/touxiang6"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/touxiang6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_15"
                        android:src="@mipmap/lanage" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</com.flipboard.bottomsheet.BottomSheetLayout>