<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/b18i_titil_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--提示-->
        <LinearLayout
            android:id="@+id/prompt_layout_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_20"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="@dimen/size_10"
                    android:background="#4dddff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/str_one"
                    android:textColor="#4dddff"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="@dimen/size_10"
                    android:background="#4dddff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/str_two"
                    android:textColor="#4dddff"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="@dimen/size_10"
                    android:background="#4dddff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/str_three"
                    android:textColor="#4dddff"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="@dimen/size_10"
                    android:background="#4dddff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/str_four"
                    android:textColor="#4dddff"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="@dimen/size_10"
                    android:background="#4dddff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/str_five"
                    android:textColor="#4dddff"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>


        </LinearLayout>

        <ListView
            android:id="@+id/list_alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_new_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#4dddff"
        android:text="@string/add_alarm"
        android:textColor="#ffffffff"
        android:textSize="@dimen/text_size_20" />

</LinearLayout>