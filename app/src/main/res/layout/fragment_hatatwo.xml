<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/chart_step_shuimia_xinlvtwo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/yungdongstep_shangzhou_xinlvtwo"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/shangzhou"
                            android:textColor="#575757" />

                        <TextView
                            android:id="@+id/yungdongstep_benzhou_xinlvtwo"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/benzhou"
                            android:textColor="@color/dark50" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linear_border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/step_tag_shuimianone_hata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_30"
                            android:text="@string/zuigaoxinlv" />

                        <TextView
                            android:id="@+id/stepval_tv_shuimianone_xinlvtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/step_tag_shuimianone_hata"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_10"
                            android:text="- -"
                            android:textSize="@dimen/size_15" />


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_5"
                        android:layout_marginTop="@dimen/size_5"
                        android:background="@color/linear_border" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/activity_tag_shuimianone_hata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_30"
                            android:text="@string/pinjunxin" />

                        <TextView
                            android:id="@+id/activityval_tv_shuimianone_xinlvtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_tag_shuimianone_hata"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_10"
                            android:text="- -"
                            android:textSize="@dimen/size_15" />


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_5"
                        android:layout_marginTop="@dimen/size_5"
                        android:background="@color/linear_border" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/licheng_tag_shuimianone_hata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_30"
                            android:text="@string/zuidixinlv" />

                        <TextView
                            android:id="@+id/lichengval_tv_shuimianone_xinlvtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/licheng_tag_shuimianone_hata"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_10"
                            android:text="- -"
                            android:textSize="@dimen/size_15" />


                    </RelativeLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linear_border" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>