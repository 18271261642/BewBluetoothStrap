<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4dddff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_5"
            android:padding="@dimen/size_15"
            android:src="@mipmap/backs"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/bar_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textColor="#ffffffff"
            android:textSize="@dimen/text_size_18"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/return_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_5"
            android:clickable="true"
            android:padding="@dimen/size_15"
            android:text="@string/zero"
            android:textColor="@drawable/b18i_selector_text_press_color"
            android:textSize="@dimen/text_size_17"
            tools:ignore="RelativeOverlap,RtlHardcoded" />

    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ishour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:layout_weight="1"
                    android:background="@drawable/my_btn_selector_two"
                    android:text="@string/hourzhen"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_16"
                    tools:ignore="ButtonStyle" />


                <!--32c0ff-->
                <Button
                    android:id="@+id/btn_ismin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:layout_weight="1"
                    android:background="@drawable/my_btn_selector"
                    android:text="@string/minezhen"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_16"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<com.example.bozhilun.android.h9.utils.H9CorrectionTimeView-->
                    <!--android:id="@+id/h9_correction_view"-->
                    <!--android:layout_width="@dimen/x200"-->
                    <!--android:layout_height="@dimen/x200"-->
                    <!--android:layout_centerInParent="true" />-->

                <com.example.bozhilun.android.h9.utils.H9CorrectionTimeView_Change
                    android:id="@+id/h9_correction_view"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x200"
                    android:layout_centerInParent="true" />

                <com.example.bozhilun.android.h9.utils.CustomProgressBar
                    android:id="@+id/custom_prog"
                    android:layout_width="@dimen/x206"
                    android:layout_height="@dimen/x206"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    zhy:circleWidth="24dp"
                    zhy:firstColor="#ffffff"
                    zhy:secondColor="#4dddff"
                    zhy:speed="10" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:layout_weight="1"
                    android:background="@drawable/my_btn_selector"
                    android:text="-" />


                <!--32c0ff-->
                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:layout_weight="1"
                    android:background="@drawable/my_btn_selector"
                    android:text="+"/>

            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/my_btn_selector_two"
                android:text="@string/confirm_compelte"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="InefficientWeight" />

                <TextView
                    android:id="@+id/textGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5"
                    android:text="@string/guide"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="3" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>