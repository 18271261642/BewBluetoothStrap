<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:id="@+id/alarmDateView"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="选择日期"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:background="@color/chang_white"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="周一"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="35dp"
                android:id="@+id/watch_CB1"
                android:layout_alignParentRight="true"
                android:textIsSelectable="true"
                android:layout_marginRight="10dp"
                android:layout_height="35dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="周二"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/watch_CB2"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:textIsSelectable="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="周三"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/watch_CB3"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:textIsSelectable="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="周四"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/watch_CB4"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:textIsSelectable="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="周五"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/watch_CB5"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:textIsSelectable="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="周六"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/watch_CB6"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:textIsSelectable="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="周日"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/watch_CB7"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:textIsSelectable="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/chang_white"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/watch_alarm_editYes"
        android:layout_width="match_parent"
        android:text="确定"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/base_orange_dark30"
        android:padding="8dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="@color/chang_white"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/watch_alarm_editNo"
        android:layout_width="match_parent"
        android:text="取消"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_height="wrap_content" />

</LinearLayout>