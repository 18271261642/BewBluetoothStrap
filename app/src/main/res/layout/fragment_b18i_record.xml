<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/b18irecordFm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="@mipmap/race_image"-->

    <LinearLayout
        android:layout_weight="1"
        android:background="@mipmap/icon_record_bg_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/battery_top_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/text_stute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff00"
            android:gravity="center"
            android:padding="6dp"
            android:text="lianjei"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--<android.support.v4.widget.SwipeRefreshLayout-->
            <!--android:id="@+id/swipeRefresh"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

            <!--</android.support.v4.widget.SwipeRefreshLayout>-->

            <com.example.bozhilun.android.h9.utils.CusRefreshLayout
                android:id="@+id/swipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/b18i_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />
            </com.example.bozhilun.android.h9.utils.CusRefreshLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/previousImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/testlv" />

                <ImageView
                    android:id="@+id/nextImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/chart" />


            </RelativeLayout>

            <View
                android:id="@+id/v"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/size_60"
                android:background="@null" />

            <LinearLayout
                android:id="@+id/line_pontion"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/v"
                android:layout_marginTop="@dimen/size_60"
                android:gravity="center"
                android:orientation="horizontal" />

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@mipmap/icon_b18i_minetop_botm" />-->

        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true" />

</LinearLayout>