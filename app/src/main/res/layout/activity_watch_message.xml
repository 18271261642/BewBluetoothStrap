<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/appbar_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_white_btn_change"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/msg_jiange"
                    android:textSize="@dimen/text_size_18" />


                <LinearLayout
                    android:id="@+id/watch_message_jiangeLin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/watch_message_jiangeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/msg_img1"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textSize="@dimen/size_16" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/lanage" />


                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linear_border" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45">

                            <ImageView
                                android:id="@+id/img_tag_six"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:src="@mipmap/weixinhuang" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_toRightOf="@+id/img_tag_six"
                                android:text="@string/mywechat"
                                android:textSize="15sp" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/watchmWechatSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/size_15"
                                android:checked="true" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/linear_border" />

                        <RelativeLayout
                            android:id="@+id/vis_control_relayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45">

                            <ImageView
                                android:id="@+id/img_tag_senven"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:src="@mipmap/fangdiu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_toRightOf="@+id/img_tag_senven"
                                android:text="@string/shortmessage"
                                android:textSize="15sp" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/watchmsgSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/size_15"
                                android:checked="true" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/linear_border" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_toRightOf="@+id/myqq_inmage"
                                android:text="QQ"
                                android:textSize="15sp" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/watchmQQSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="@dimen/size_15"
                                android:checked="true" />

                            <ImageView
                                android:id="@+id/myqq_inmage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/textView"
                                android:layout_marginLeft="14dp"
                                android:layout_marginStart="14dp"
                                android:src="@mipmap/qqs" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/linear_border" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45">

                            <ImageView
                                android:id="@+id/my_Viber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:src="@mipmap/vibers" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_toRightOf="@+id/my_Viber"
                                android:text="Viber"
                                android:textSize="15sp" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/watchViberSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/my_Viber"
                                android:layout_marginRight="@dimen/size_15"
                                android:checked="true" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/linear_border" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45">

                            <ImageView
                                android:id="@+id/img_twitter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:src="@mipmap/tws" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_toRightOf="@+id/img_twitter"
                                android:text="Twitter"
                                android:textSize="15sp" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/watchTwitterSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/textView7"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="@dimen/size_15"
                                android:checked="true" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/linear_border" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45">

                            <ImageView
                                android:id="@+id/img_Facebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:src="@mipmap/facebooks" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_toRightOf="@+id/img_Facebook"
                                android:text="Facebook"
                                android:textSize="15sp" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/watchFacebookSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/size_15"
                                android:checked="true" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/linear_border" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45">

                            <ImageView
                                android:id="@+id/img_Whatsapp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:src="@mipmap/whatsapps" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_toRightOf="@+id/img_Whatsapp"
                                android:text="Whatsapp"
                                android:textSize="15sp" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/watchWhatsappSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/textView3"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="@dimen/size_15"
                                android:checked="true" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/linear_border" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_45">

                            <ImageView
                                android:id="@+id/img_Instagram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:src="@mipmap/instagrams" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/size_15"
                                android:layout_toRightOf="@+id/img_Instagram"
                                android:text="Instagram"
                                android:textSize="15sp" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/watchInstagramSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/size_15"
                                android:checked="true" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/linear_border" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="@color/chang_white"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/linear_border" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="3dp"
                            android:layout_marginBottom="@dimen/size_20"
                            android:background="@color/white"
                            android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/watchMsgExplainTv"
                                    android:layout_width="wrap_content"
                                    android:text="@string/notif_explain"
                                    android:textColor="@color/supermarket"
                                    android:textSize="17sp"
                                    android:padding="3dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="17sp"
                                    android:padding="3dp"
                                    android:layout_marginLeft="@dimen/size_15"
                                    android:text="@string/notif_messge"
                                    android:layout_height="wrap_content" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/linear_border" />

                            <RelativeLayout
                                android:id="@+id/watch_msgOpenNitBtn"
                                android:layout_width="match_parent"
                                android:padding="5dp"
                                android:background="@drawable/square_white_btn_change"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/device_img3"
                                    android:layout_width="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/size_5"
                                    android:visibility="gone"
                                    android:background="@mipmap/h9_mine_notice"
                                    android:layout_height="25dp" />


                                <TextView
                                    android:id="@+id/watch_watchmsg_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/size_10"
                                    android:text="@string/open_notif"
                                    android:layout_toEndOf="@+id/device_img3"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/size_18"
                                    android:src="@mipmap/lanage" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="15dp"
                                android:background="@color/linear_border" />

                            <RelativeLayout
                                android:id="@+id/watch_msgOpenAccessBtn"
                                android:layout_width="match_parent"
                                android:padding="5dp"
                                android:background="@drawable/square_white_btn_change"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/device_img"
                                    android:layout_width="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/size_5"
                                    android:visibility="gone"
                                    android:background="@mipmap/h9_mine_notice"
                                    android:layout_height="25dp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/size_10"
                                    android:text="@string/open_function"
                                    android:layout_toEndOf="@+id/device_img"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/size_18"
                                    android:src="@mipmap/lanage" />

                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/linear_border" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </ScrollView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>