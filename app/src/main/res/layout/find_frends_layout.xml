<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/b18i_titil_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:background="#dddddddd"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#32c0ff"
            android:padding="0.1dp">

            <EditText
                android:id="@+id/number_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="@dimen/size_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/scan_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4dddff"
            android:paddingBottom="@dimen/size_10"
            android:paddingEnd="@dimen/size_25"
            android:paddingLeft="@dimen/size_25"
            android:paddingTop="@dimen/size_10"
            android:text="@string/scan_frend"
            android:clickable="true"
            android:textColor="@drawable/b18i_selector_text_press_color"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>

    <ListView
        android:id="@+id/frends_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp">

    </ListView>

</LinearLayout>